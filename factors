#!/usr/bin/python3
import math
import sys

def factorize(n):
    factors = []
    for i in range(2, int(math.sqrt(n)) + 1):
        while n % i == 0:
            factors.append(i)
            n //= i
    if n > 1:
        factors.append(n)
    return factors

def format_output(num, factors):
    # Find the pair of factors
    factor_pairs = []
    for i in range(len(factors) // 2):
        pair = (factors[i], factors[-i - 1])
        factor_pairs.append(pair)

    # Format the output
    formatted_output = [f"{num}={pair[0]}*{pair[1]}" for pair in factor_pairs]
    return formatted_output

def main(filename):
    with open(filename, 'r') as file:
        numbers = [int(line.strip()) for line in file]

    for num in numbers:
        factors = factorize(num)
        output_lines = format_output(num, factors)
        for line in output_lines:
            print(line)

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python factors.py <file>")
        sys.exit(1)

    filename = sys.argv[1]
    main(filename)

